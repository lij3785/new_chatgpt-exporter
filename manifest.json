{
  "manifest_version": 3,
  "name": "Chatgpt Chat Exporter",
  "version": "1.0",
  "description": "导出 Chatgpt 对话内容为 PDF 或 PNG，并支持邮件发送",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}